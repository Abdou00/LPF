{% extends 'layout.html.twig' %}

{% block content %}

	{% for message in app.session.flashbag.get('success') %}
		<div class="alert alert-success alert-dismissible fade show">{{ message }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	{% endfor %}
	<div>
		<a href="" class="m-2 btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Ajouter un membre</a>
	</div>
	<table class="table dark-table" >
		<thead>
			<tr>
				<th>Id du membre</th>
				<th>Username</th>
				<th>Prénom</th>
				<th>Nom</th>
				<th>Email</th>
				<th>Civilite</th>
				<th>Code Postal</th>
				<th>Ville</th>
				<th>Adresse</th>
				<th>Commandes</th>
				<th colspan="3">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for m in membres %}
				<tr>
					<td>{{ m.idMembre }}</td>
					<td>{{ m.username }}</td>
					<td>{{ m.prenom }}</td>
					<td>{{ m.nom }}</td>
					<td>{{ m.email }}</td>
					<td>{{ m.civilite }}</td>
					<td>{{ m.codepostal }}</td>
					<td>{{ m.ville }}</td>
					<td>{{ m.adresse }}</td>
					<td>{{ m.commandes | length }}</td>
					
					
					
<td><a href="" onclick="return confirm('êtes-vous certain de vouloir supprimer le membre {{ m.idMembre }}')"><i class="fas fa-trash"></i></a></td>

<td><a href=""><i class="fas fa-edit"></i></a></td>

<td><a target="_blank" href=""><i class="fas fa-eye"></i></a></td>


				</tr>
			{% endfor %}
		</tbody>
	</table>
	
	
	
{% endblock %}